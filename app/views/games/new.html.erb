<h1>New Game</h1>

<div class="letter-container">
  <% @letters.each do |letter| %>
  <div class="letter-box">
    <p><%= letter %></p>
  </div>
  <% end %>
</div>

<p>What is the longest word you can find?</p>

<form class="play-form" action="/score" method="post">
  <input class="play-input" type="text" name="guess">
  <input class="play-submit" type="submit" value="play">
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
<%= hidden_field_tag :letters, @letters %>
</form>
